{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "args": [
                "--gin-log",
                "--ui-sponsor=nirmata",
                "--engine-builtin-crds=cert-manager",
                "--engine-builtin-crds=prometheus-operator",
            ],
        },
        {
            "name": "Backend (cluster connected)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "args": [
                "--gin-log",
                "--ui-sponsor=nirmata",
                "--cluster",
                "--engine-builtin-crds=argocd",
                "--engine-builtin-crds=cert-manager",
                "--engine-builtin-crds=prometheus-operator",
                "--engine-builtin-crds=tekton-pipeline",
            ],
        }
    ]
}