{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "args": [
                "--log",
            ],
        },
        {
            "name": "Backend (with kubeconfig)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "args": [
                "--log",
                "--kubeconfig=${userHome}/.kube/config",
            ],
        }
    ]
}