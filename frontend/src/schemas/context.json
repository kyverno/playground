{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "kubernetes": {
            "type": "object",
            "properties": {
                "version": {
                    "type": "string",
                    "description": "Kubernetes version of the target cluster."
                }
            }
        },
        "context": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string",
                    "description": "The name that uniquely identifies this user among all active users."
                },
                "groups": {
                    "type": "array",
                    "description": "The names of groups this user is a part of.",
                    "items": {
                        "type": "string"
                    }
                },
                "roles": {
                    "type": "array",
                    "description": "Roles is the list of namespaced role names for the user.",
                    "items": {
                        "type": "string"
                    }
                },
                "clusterRoles": {
                    "type": "array",
                    "description": "ClusterRoles is the list of cluster-wide role names for the user.",
                    "items": {
                        "type": "string"
                    }
                },
                "namespaceLabels": {
                    "type": "object",
                    "description": "namespaceLabels stores the label of namespace to be processed by namespace selector"
                },
                "operation": {
                    "type": "string",
                    "default": "CREATE",
                    "description": "operation contains the admission operation",
                    "enum": [
                        "CREATE",
                        "UPDATE",
                        "DELETE",
                        "CONNECT"
                    ]
                },
                "dryRun": {
                    "type": "boolean",
                    "description": "simulates dry run requests",
                    "default": false
                }
            },
            "required": [
                "operation"
            ]
        },
        "flags": {
            "type": "object",
            "properties": {
                "cosign": {
                    "type": "object",
                    "properties": {
                        "imageSignatureRepository": {
                            "type": "string",
                            "description": "Alternate repository for image signatures."
                        }
                    }
                },
                "exceptions": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Enable PolicyException feature."
                        },
                        "namespace": {
                            "type": "string",
                            "description": "Configure the namespace to accept PolicyExceptions."
                        }
                    }
                },
                "forceFailurePolicyIgnore": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Force set Failure Policy to 'ignore'."
                        }
                    }
                },
                "protectManagedResources": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Enable managed resources protection."
                        }
                    }
                },
                "registry": {
                    "type": "object",
                    "properties": {
                        "allowInsecure": {
                            "type": "boolean",
                            "description": "Whether to allow insecure connections to registries."
                        },
                        "pullSecrets": {
                            "type": "array",
                            "description": "Secret resource names for image registry access credentials.",
                            "items": {
                                "type": "string"
                            }
                        },
                        "credentialHelpers": {
                            "type": "array",
                            "description": "Credential helpers to enable (default,google,amazon,azure,github).",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "variables": {
            "type": "object"
        }
    },
    "required": [
        "context"
    ]
}